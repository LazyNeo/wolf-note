/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.user-container {
  width: 100%;
  min-height: 115rpx;
  padding: 10rpx;
  display: block;
  border-bottom: #aaa 1px dashed;
}
.flex-wrp{
  display: inline-flex;
}
.number {
  width: 45rpx;
  height: 45rpx;
  margin-top: 10rpx;
  border-radius: 50%;
  background-color: #aaa;
  color: #fff;
  text-align: center;
}
.user-msg {
  width: 100%;
}
.role {
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
  border-radius: 50%;
  background-color: rgb(33, 190, 59);
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}

.label{
  height: 40rpx;
  line-height: 40rpx;
  border: rgb(14, 216, 182) 1px solid;
  color: rgb(14, 216, 182);
  text-align: center;
  padding: 0rpx 15rpx;
  margin-top: 5rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  font-size: 13px;
}